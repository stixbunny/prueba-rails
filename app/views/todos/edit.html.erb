<h1>EDIT</h1>

<h2><%= notice %></h2>

<%= form_with(model: @todo, local: true) do |form| %>
  <!-- quedan con el scope de post -->
  <%= form.label :description %>
  <%= form.text_field :description %>
  <br>
  <%= form.label :completed %>
  <%= form.check_box :completed%>
  <br>
  <%= form.submit 'Actualizar' %>
<% end %>
